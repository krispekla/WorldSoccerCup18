<UserControl x:Class="WPF.Windows.PlayerGridCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="100" FontSize="6" Margin="0,5">
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="15" Opacity="0.2" Color="#33000000"/>
    </UserControl.Effect>
    <Grid Background="White" Cursor="Hand" MouseUp="Grid_MouseUp">
        <StackPanel Orientation="Vertical" Height="125" Width="100" VerticalAlignment="Top">
            <Image x:Name="imgPlyer" Height="80" Width="80" Source="../Resources/default.png"/>

            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Name:"/>
                <Label x:Name="lbName" Content=""/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Label Content="Number:"/>
                <Label x:Name="lbNumber" Content=""/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
